server {
	listen 80 default_server;
	listen [::]:80 default_server ipv6only=on;

	return 301 https://$host:<%= Proxy.https_port %>$request_uri;
}

server {
	listen 443 default_server;

	include ssl.conf;

	return 444;
}
<% mappings.each do |m| %>
server {
	listen 443;

	include ssl.conf;

	server_name <%= m.subdomain %>.<%= domain %>;

	location / {
		proxy_pass <%= m.url %>;
	}
}
<% end %>
